{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react-jsx",
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "esnext",

    "moduleResolution": "bundler",

    "paths": { "@/*": ["./*"] },
    "allowJs": true,
    "checkJs": true,

    "strict": true,
    "importHelpers": true,
    "noEmit": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
